generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @unique @default(uuid())
  criadoEm     DateTime
  atualizadoEm DateTime

  status          Boolean
  acesso          String
  nome            String
  email           String  @unique
  senhaHash       String
  token           String?
  codigoSeguranca String? @db.VarChar(10)

  @@map("autenticacao")
}

model Pedido {
  id           String   @id @unique @default(uuid())
  criadoEm     DateTime
  atualizadoEm DateTime

  nome     String
  endereco String
  status   String
}
